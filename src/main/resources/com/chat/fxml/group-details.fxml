<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.chat.control.GroupDetailsControl" spacing="20"
      style="-fx-padding: 20; -fx-background-color: #ffffff;" fx:id="mainContainer">

    <!-- 群聊信息头部 -->
    <HBox alignment="CENTER" spacing="20">
        <ImageView fx:id="groupAvatar" fitWidth="80" fitHeight="80" preserveRatio="true"
                   style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);" />

        <VBox spacing="5">
            <Label fx:id="groupNameLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <Label fx:id="groupIdLabel" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />
            <HBox spacing="10">
                <Label fx:id="memberCountLabel" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" />
                <Label fx:id="createTimeLabel" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" />
            </HBox>
        </VBox>
    </HBox>

    <!-- 分隔线 -->
    <Separator />

    <!-- 群公告 -->
    <VBox spacing="10">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="群公告" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <Button fx:id="updateNoticeButton" text="更新"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 3 10;" />
        </HBox>
        <TextArea fx:id="groupNoticeArea" wrapText="true" prefHeight="80"
                  style="-fx-background-color: #f8f9fa; -fx-border-color: #ddd; -fx-border-radius: 5;" />
    </VBox>

    <!-- 我在本群的昵称 -->
    <VBox spacing="10">
        <Label text="我在本群的昵称" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <HBox spacing="10">
            <TextField fx:id="myNicknameField" HBox.hgrow="ALWAYS" promptText="设置你的群昵称..."
                       style="-fx-background-radius: 5; -fx-border-radius: 5;" />
            <Button fx:id="saveNicknameButton" text="保存昵称"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 5 15;" />
        </HBox>
    </VBox>

    <!-- 群文件 -->
    <VBox spacing="10">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="群文件" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <Button fx:id="downloadButton" text="下载"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 3 10;" />
        </HBox>
        <ListView fx:id="fileListView" prefHeight="120"
                  style="-fx-background-color: #f8f9fa; -fx-border-color: #ddd; -fx-border-radius: 5;" />
    </VBox>

    <!-- 分隔线 -->
    <Separator />

    <!-- 操作按钮区域 -->
    <HBox spacing="15" alignment="CENTER">
        <Region HBox.hgrow="ALWAYS" />

        <!-- 退出群聊按钮 -->
        <Button fx:id="exitGroupButton" text="退出群聊"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;
                     -fx-font-size: 14px; -fx-padding: 8 25;" />
    </HBox>

    <!-- 底部提示 -->
    <Label text="注：退出群聊后将不再接收群消息，且无法撤销操作"
           style="-fx-font-size: 12px; -fx-text-fill: #e74c3c; -fx-alignment: CENTER;" />
</VBox>