<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chat.control.MainController">
    <top>
        <VBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="8" style="-fx-background-color: #0078d4;">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <Label fx:id="usernameLabel" text="用户" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
        </VBox>
    </top>

    <center>
        <TabPane fx:id="tabPane" prefHeight="400.0" prefWidth="600.0">
            <tabs>
                <Tab fx:id="chatTab" text="聊天">
                    <content>
                        <VBox spacing="10">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10" />
                            </padding>
                            <ListView fx:id="chatListView" prefHeight="300.0" />
                            <HBox spacing="10">
                                <Label text="To:" />
                                <TextField fx:id="toField" promptText="对方用户名" prefWidth="160" />
                                <TextField fx:id="messageTextField" HBox.hgrow="ALWAYS" promptText="输入消息..." onAction="#onSend" />
                                <Button fx:id="sendButton" text="发送" onAction="#onSend" />
                            </HBox>
                        </VBox>
                    </content>
                </Tab>
                <Tab fx:id="usersTab" text="用户列表">
                    <content>
                        <ListView fx:id="usersListView" />
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>