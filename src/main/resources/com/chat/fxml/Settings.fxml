<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainContainer" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chat.control.SettingControl">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <center>
        <VBox alignment="TOP_CENTER" spacing="15.0" maxWidth="350">
            <!-- 用户信息 -->
            <VBox alignment="CENTER" spacing="5">
                <Label fx:id="usernameLabel" text="用户："
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />
            </VBox>

            <!-- 修改密码区域 -->
            <VBox alignment="CENTER_LEFT" spacing="12"
                  style="-fx-padding: 20px; -fx-background-color: #f8f9fa; -fx-background-radius: 8px;">

                <Label text="修改密码"
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" />

                <!-- 当前密码 -->
                <VBox alignment="CENTER_LEFT" spacing="3">
                    <Label text="当前密码" style="-fx-font-size: 13px; -fx-text-fill: #666;" />
                    <PasswordField fx:id="oldPasswordField" promptText="当前密码"
                                   style="-fx-pref-width: 300px; -fx-pref-height: 36px; -fx-font-size: 14px;" />
                </VBox>

                <!-- 新密码 -->
                <VBox alignment="CENTER_LEFT" spacing="3">
                    <Label text="新密码" style="-fx-font-size: 13px; -fx-text-fill: #666;" />
                    <PasswordField fx:id="newPasswordField" promptText="新密码"
                                   style="-fx-pref-width: 300px; -fx-pref-height: 36px; -fx-font-size: 14px;" />
                </VBox>

                <!-- 确认新密码 -->
                <VBox alignment="CENTER_LEFT" spacing="3">
                    <Label text="确认新密码" style="-fx-font-size: 13px; -fx-text-fill: #666;" />
                    <PasswordField fx:id="confirmPasswordField" promptText="确认新密码"
                                   style="-fx-pref-width: 300px; -fx-pref-height: 36px; -fx-font-size: 14px;" />
                </VBox>

                <!-- 状态提示 -->
                <Label fx:id="passwordStatusLabel" text=""
                       style="-fx-font-size: 12px; -fx-text-fill: #666; -fx-padding: 5 0;" />

                <!-- 修改密码按钮 -->
                <Button fx:id="updatePasswordButton" text="修改密码"
                        style="-fx-pref-width: 300px; -fx-pref-height: 38px;
                               -fx-background-color: #007bff; -fx-text-fill: white;
                               -fx-font-size: 14px; -fx-background-radius: 4px;"
                        onAction="#updatePassword" />
            </VBox>

            <!-- 退出登录按钮 -->
            <Button fx:id="logoutButton" text="退出登录"
                    style="-fx-pref-width: 300px; -fx-pref-height: 38px;
                           -fx-background-color: #dc3545; -fx-text-fill: white;
                           -fx-font-size: 14px; -fx-background-radius: 4px;"
                    onAction="#logout" />
        </VBox>
    </center>
</BorderPane>