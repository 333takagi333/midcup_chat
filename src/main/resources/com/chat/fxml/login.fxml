<?xml version="1.0" encoding="UTF-8"?>

<?import com.chat.ui.CustomButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chat.control.LoginControl">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <children>
        <!-- 标题 -->
        <Label text="中杯" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>

        <!-- 账号输入区域 -->
        <VBox alignment="CENTER_LEFT" spacing="5">
            <Label text="账号" style="-fx-font-size: 14px;"/>
            <TextField fx:id="usernameField" promptText="请输入"
                       style="-fx-pref-width: 250px; -fx-pref-height: 35px;"/>
        </VBox>

        <!-- 密码输入区域 -->
        <VBox alignment="CENTER_LEFT" spacing="5">
            <Label text="密码" style="-fx-font-size: 14px;"/>
            <PasswordField fx:id="passwordField" promptText="请输入"
                           style="-fx-pref-width: 250px; -fx-pref-height: 35px;"/>
        </VBox>

        <!-- 按钮区域 -->
        <HBox alignment="CENTER" spacing="15">
            <Hyperlink fx:id="registerLink" text="注册账号" onAction="#register"
                       style="-fx-text-fill: #0078d4; -fx-cursor: hand;"/>
            <Label text="|" style="-fx-text-fill: #cccccc;"/>
            <Hyperlink fx:id="forgotPasswordLink" text="忘记密码" onAction="#forgotPassword"
                       style="-fx-text-fill: #0078d4; -fx-cursor: hand;"/>
        </HBox>

        <!-- 登录按钮 -->
        <CustomButton fx:id="loginButton" text="登录" onAction="#login"
                      style="-fx-pref-width: 250px; -fx-pref-height: 35px;
                            -fx-background-color: #0078d4; -fx-text-fill: white;
                            -fx-font-size: 14px; -fx-background-radius: 5px;
                            -fx-cursor: hand;"/>
    </children>
</VBox>