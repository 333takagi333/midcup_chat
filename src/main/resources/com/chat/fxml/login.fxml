<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import java.lang.String?>
<VBox alignment="CENTER" spacing="16" styleClass="login-root"
      stylesheets="@../css/main.css"
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.chat.control.LoginControl">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <children>
        <!-- 登录卡片容器 -->
        <VBox alignment="CENTER" spacing="18" styleClass="card" maxWidth="360">
            <!-- 标题与描述 -->
            <VBox alignment="CENTER" spacing="6">
                <Label text="中杯" styleClass="app-title"/>
                <Label text="安全登录，开始聊天" styleClass="app-subtitle"/>
            </VBox>

            <!-- UID输入区域 -->
            <VBox alignment="CENTER_LEFT" spacing="6" maxWidth="280">
                <Label text="用户ID" styleClass="input-label"/>
                <TextField fx:id="uidField" promptText="请输入用户ID（数字）" styleClass="input-field"/>
            </VBox>

            <!-- 密码输入区域 -->
            <VBox alignment="CENTER_LEFT" spacing="6" maxWidth="280">
                <Label text="密码" styleClass="input-label"/>
                <PasswordField fx:id="passwordField" promptText="请输入" styleClass="input-field"/>
            </VBox>

            <!-- 按钮区域 -->
            <HBox alignment="CENTER" spacing="12">
                <Hyperlink fx:id="registerLink" text="注册账号" onAction="#register" styleClass="text-link"/>
                <Label text="|" styleClass="divider-text"/>
                <Hyperlink fx:id="forgotPasswordLink" text="忘记密码" onAction="#forgotPassword" styleClass="text-link"/>
            </HBox>

            <!-- 登录按钮 -->
            <Button fx:id="loginButton" text="登录" onAction="#login"
                    prefWidth="280" prefHeight="40"
                    styleClass="primary-button"/>
        </VBox>
    </children>
</VBox>