<?xml version="1.0" encoding="UTF-8"?>

<?import com.chat.ui.CustomButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chat.control.LoginControl">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label text="登录" style="-fx-font-size: 24px;"/>
      <TextField fx:id="usernameField" promptText="账号" />
      <PasswordField fx:id="passwordField" promptText="密码" />
      <CustomButton fx:id="loginButton" text="登录" onAction="#login"/>
      <CustomButton fx:id="registerButton" text="注册" onAction="#register"/>
   </children>
</VBox>

