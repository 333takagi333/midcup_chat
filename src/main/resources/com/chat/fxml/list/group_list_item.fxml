<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="cellBox" alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="300.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chat.control.list.GroupListItemControl">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <ImageView fx:id="avatarImage" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
        <VBox HBox.hgrow="ALWAYS">
            <children>
                <Label fx:id="nameLabel" style="-fx-font-weight: bold; -fx-font-size: 14;" text="Group Name" />
                <HBox spacing="10.0">
                    <children>
                        <Label fx:id="messageLabel" style="-fx-text-fill: #666; -fx-font-size: 12;" text="Last Message" />
                        <Label fx:id="countLabel" style="-fx-text-fill: #999; -fx-font-size: 11;" text="0" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</HBox>

