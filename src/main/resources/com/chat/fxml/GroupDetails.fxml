<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chat.control.GroupDetailsControl">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <VBox spacing="15" alignment="CENTER">
        <ImageView fx:id="groupAvatar" fitWidth="100" fitHeight="100" />
        <Label fx:id="groupNameLabel" style="-fx-font-size: 20; -fx-font-weight: bold;" />
        <Label fx:id="memberCountLabel" style="-fx-text-fill: #7f8c8d;" />
    </VBox>

    <VBox spacing="10">
        <Label text="群成员:" style="-fx-font-weight: bold;" />
        <ListView fx:id="memberListView" prefHeight="200" />
    </VBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="进入群聊" onAction="#enterGroup"
                style="-fx-background-color: #3498db; -fx-text-fill: white;" />
        <Button text="退出群聊" onAction="#exitGroup"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
    </HBox>
</VBox>