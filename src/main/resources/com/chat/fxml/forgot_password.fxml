<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chat.control.ForgotPasswordControl">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <children>
        <Label text="忘记密码" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <VBox alignment="CENTER_LEFT" spacing="5">
            <Label text="密钥" style="-fx-font-size: 14px;"/>
            <TextField fx:id="keyField" promptText="请输入安全密钥" style="-fx-pref-width: 250px; -fx-pref-height: 35px;"/>
        </VBox>

        <VBox alignment="CENTER_LEFT" spacing="5">
            <Label text="新密码" style="-fx-font-size: 14px;"/>
            <PasswordField fx:id="newPasswordField" promptText="请输入新密码" style="-fx-pref-width: 250px; -fx-pref-height: 35px;"/>
        </VBox>

        <VBox alignment="CENTER_LEFT" spacing="5">
            <Label text="确认密码" style="-fx-font-size: 14px;"/>
            <PasswordField fx:id="confirmPasswordField" promptText="请再次输入新密码" style="-fx-pref-width: 250px; -fx-pref-height: 35px;"/>
        </VBox>

        <HBox spacing="15" alignment="CENTER">
            <children>
                <Button fx:id="resetButton" text="重置密码" onAction="#resetPassword"
                        style="-fx-background-color: #0078d4; -fx-text-fill: white; -fx-pref-width: 100px; -fx-pref-height: 35px;"/>

                <Button fx:id="backButton" text="返回登录" onAction="#backToLogin"
                        style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-pref-width: 100px; -fx-pref-height: 35px;"/>
            </children>
        </HBox>

        <Label fx:id="statusLabel" text="" style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
    </children>
</VBox>